@model IEnumerable<RatingViewModel>
@{
    ViewData["Title"] = "All Ratings";
}

<h1>All Ratings</h1>
<br />
<a asp-controller="Item" asp-action="Index" class="text-white btn btn-info">Back To Items</a>
<br />

@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.ItemId)</td>
                <td>@Html.DisplayNameFor(R => R.StarsNum)</td>
            </tr>


        </thead>
        <tbody>
            @foreach (var Rate in Model)
            {
                <tr>
                    <td>@Rate.ItemId</td>
                    <td>@Rate.StarsNum</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center p-3 bg-warning text-white fw-bold fs-3">
        There is No Rating For Items
    </div>
}

