@model IEnumerable<ItemViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Items</h1>
<br/>
<br/>
<a asp-controller="Item" asp-action="Create" class="btn btn-success rounded">Create New Item</a>
<br/>
<br/>

@if(Model.Count() > 0)
{
    <table class="mt-3 table table-striped text-center table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(I => I.Name)</td>
                <td>@Html.DisplayNameFor(I => I.Price)</td>
                <td>@Html.DisplayNameFor(I => I.AverageRating)</td>
                <td>@Html.DisplayNameFor(I => I.RatingCount)</td>
                <td>Rate</td>
            </tr>
           

        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.AverageRating <i class="fas text-warning fa-star"></i></td>
                    <td>@item.RatingCount <td>
                    <td><a asp-controller="Rating" asp-action="Rate" asp-route-id="@item.id" class="text-warning  btn btn-info"><i class="fas  fa-star"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center p-3 bg-warning text-white fw-bold fs-3">
        There is No Items
    </div>
}


